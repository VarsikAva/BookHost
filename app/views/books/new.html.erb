<div class="container my-5">
  <h1 class="title mb-5"> Rent out a new book now!</h1>

  <%= simple_form_for (@book) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "title" } %>
      <%= f.input :author,
                  required: true,
                  input_html: { autocomplete: "author" } %>
      <%= f.input :description,
                  required: true,
                  input_html: { autocomplete: "description" } %>
      <%= f.input :isbn,
                  required: true,
                  input_html: { autocomplete: "isbn" } %>
      <%= f.input :price,
                  required: true,
                  input_html: { autocomplete: "price" } %>
      <%= f.input :stock_quantity,
                  required: true,
                  input_html: { autocomplete: "stock_quantity" } %>
      <%= f.input :cover, as: :file,
                  required: true %>
    </div>

    <div class="form-actions my-5">
      <%= f.submit "Submit", class: "btn btn-book btn-product-r" %>
    </div>
  <% end %>
</div>
