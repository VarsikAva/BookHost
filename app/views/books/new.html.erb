<div class="container my-5">
  <h1>Create New Book</h1>
  <p>Fill in the form to create a new book.</p>

  <%= simple_form_for @book, html: { multipart: true } do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "title" } %>
      <%= f.input :author,
                  required: true,
                  input_html: { autocomplete: "author" } %>
      <%= f.input :isbn,
                  required: true,
                  input_html: { autocomplete: "isbn" } %>
      <%= f.input :price,
                  required: true,
                  input_html: { autocomplete: "price" } %>
      <%= f.input :stock_quantity,
                  required: true,
                  input_html: { autocomplete: "stock_quantity" } %>
      <%= f.input :image, as: :file,
                  required: true %>
    </div>

    <div class="form-actions">
      <div class="btn btn-primary">
        <%= f.button :submit, "Create Book" %>
      </div>
    </div>
  <% end %>
</div>
